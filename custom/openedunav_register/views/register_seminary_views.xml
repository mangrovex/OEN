<openerp>
    <data>
        <record id="view_sie_register_seminary_tree" model="ir.ui.view">
            <field name="name">sie.register.seminary.tree</field>
            <field name="model">sie.register.seminary</field>
            <field name="arch" type="xml">
                <tree string="register of seminary">
                    <field name="course_id"/>
                    <field name="expositor"/>
                    <field name="seminary_name"/>
                </tree>
            </field>
        </record>
        <record id="view_sie_register_seminary_form" model="ir.ui.view">
            <field name="name">sie.register.seminary.form</field>
            <field name="model">sie.register.seminary</field>
            <field name="arch" type="xml">
                <form string="register of seminary">
                    <sheet>
                        <group>
                            <field name="course_id"/>
                            <field name="expositor"/>
                            <field name="date"/>
                            <field name="seminary_name"/>
                            <field name="duration"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_sie_register_seminary_search" model="ir.ui.view">
            <field name="name">sie.register.seminary.search</field>
            <field name="model">sie.register.seminary</field>
            <field name="arch" type="xml">
                <search string="register_seminary">
                    <field name="seminary_name" select="True"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_sie_register_seminary_view">
            <field name="name">Register Seminary</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sie.register.seminary</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_sie_register_seminary_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new register of seminary.
                </p>
            </field>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_sie_register_seminary_view_form">
            <field name="act_window_id" ref="act_open_sie_register_seminary_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_sie_register_seminary_form"/>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_sie_register_seminary_view_tree">
            <field name="act_window_id" ref="act_open_sie_register_seminary_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_sie_register_seminary_tree"/>
        </record>
    </data>
</openerp>