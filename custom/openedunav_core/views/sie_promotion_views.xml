<odoo>
    <data>
        <record id="view_sie_promotion_tree" model="ir.ui.view">
            <field name="name">sie.promotion.tree</field>
            <field name="model">sie.promotion</field>
            <field name="arch" type="xml">
                <tree string="promotion">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="view_sie_promotion_form" model="ir.ui.view">
            <field name="name">sie.promotion.form</field>
            <field name="model">sie.promotion</field>
            <field name="arch" type="xml">
                <form string="promotion">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_sie_promotion_search" model="ir.ui.view">
            <field name="name">sie.promotion.search</field>
            <field name="model">sie.promotion</field>
            <field name="arch" type="xml">
                <search string="promotion">
                    <field name="name" select="True"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_sie_promotion_view">
            <field name="name">promotion</field>
            <field name="res_model">sie.promotion</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_sie_promotion_search"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new promotion.
                </p>
            </field>
        </record>

    </data>
</odoo>