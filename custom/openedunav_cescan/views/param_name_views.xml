<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_sie_param_name_form" model="ir.ui.view">
            <field name="name">sie.param.name.form</field>
            <field name="model">sie.param.name</field>
            <field name="arch" type="xml">
                <form string="Parameters">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="short_name" style="width:30%%" colspan="2"/>
                            <field name="code" attrs="{'readonly':[('create_date', '!=', False)]}"/>
                            <field name="create_date" invisible="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_sie_param_name_tree" model="ir.ui.view">
            <field name="name">sie.param.name.tree</field>
            <field name="model">sie.param.name</field>
            <field name="arch" type="xml">
                <tree string="Parameters">
                    <field name="name"/>
                    <field name="short_name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>
        <record id="view_sie_param_name_search" model="ir.ui.view">
            <field name="name">sie.param.name.search</field>
            <field name="model">sie.param.name</field>
            <field name="arch" type="xml">
                <search string="Search Course">
                    <field name="name"/>
                    <field name="short_name"/>
                    <group expand="0" string="Group By...">
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_sie_param_name_view">
            <field name="name">Matrix Parameter Name</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sie.param.name</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_sie_param_name_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new matrix.
                </p>
            </field>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_sie_param_name_view_form">
            <field name="act_window_id" ref="act_open_sie_param_name_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_sie_param_name_form"/>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_sie_param_name_view_tree">
            <field name="act_window_id" ref="act_open_sie_param_name_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_sie_param_name_tree"/>
        </record>
    </data>
</openerp>