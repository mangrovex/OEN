<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Concept of Faculty Appreciation -->
        <record id="view_sie_concept_form" model="ir.ui.view">
            <field name="name">sie.concept.form</field>
            <field name="model">sie.concept</field>
            <field name="arch" type="xml">
                <form string="Concept of Faculty Appreciation" version="7.0">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Name"/>
                            <h1>
                                <field name="name" class="oe_inline" placeholder="Concept"/>
                            </h1>
                        </div>
                        <notebook>
                            <page string="Description">
                                <field name="description" nolabel="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_sie_concept_tree" model="ir.ui.view">
            <field name="name">sie.concept.tree</field>
            <field name="model">sie.concept</field>
            <field name="arch" type="xml">
                <tree string="Concept of Faculty Appreciation">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="view_sie_concept_search" model="ir.ui.view">
            <field name="name">sie.concept.search</field>
            <field name="model">sie.concept</field>
            <field name="arch" type="xml">
                <search string="Concept of Faculty Appreciation">
                    <field name="name"/>
                    <field name="description"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_sie_concept_view">
            <field name="name">Concept</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sie.concept</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_sie_concept_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new concept.
                </p>
            </field>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_sie_concept_view_form">
            <field name="act_window_id" ref="act_open_sie_concept_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_sie_concept_form"/>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_sie_concept_view_tree">
            <field name="act_window_id" ref="act_open_sie_concept_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_sie_concept_tree"/>
        </record>
    </data>
</openerp>