<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Attachment-->
        <record id="view_sie_attachment_form" model="ir.ui.view">
            <field name="name">sie.attachment.form</field>
            <field name="model">sie.attachment</field>
            <field name="arch" type="xml">
                <form string="Attachment" version="7.0">
                    <sheet>
                        <group>
                            <field name="name" invisible="1"/>
                            <field widget="binary" height="64" name="file" filename="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_sie_attachment_tree" model="ir.ui.view">
            <field name="name">sie.attachment.tree</field>
            <field name="model">sie.attachment</field>
            <field name="arch" type="xml">
                <tree string="Attachment">
                    <field name="name"/>
                    <field widget="binary" height="64" name="file" filename="name"/>
                </tree>
            </field>
        </record>
        <record id="view_sie_attachment_search" model="ir.ui.view">
            <field name="name">sie.attachment.search</field>
            <field name="model">sie.attachment</field>
            <field name="arch" type="xml">
                <search string="Attachment">
                    <field name="name"/>
                    <field name="file"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_sie_attachment_view">
            <field name="name">Attachment</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sie.attachment</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_sie_attachment_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new attachment.
                </p>
            </field>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_sie_attachment_view_form">
            <field name="act_window_id" ref="act_open_sie_attachment_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_sie_attachment_form"/>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_sie_attachment_view_tree">
            <field name="act_window_id" ref="act_open_sie_attachment_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_sie_attachment_tree"/>
        </record>
    </data>
</openerp>