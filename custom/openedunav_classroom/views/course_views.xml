                                <field name="matrix_id" options='{"no_open":True,"no_create_edit":True,"no_create":True,"no_quick_create":True}'/>
                                <field name="end_date"/>
                                <field name="work_days"/>
                                <field name="place"/>
                            </group>
                        </group>
                        <notebook>
                            <!--<page string="Parameters">-->
                            <!--<field name="parameter_ids" nolabel="1"/>-->
                            <!--</page>-->
                            <page string="Asignaturas">
                                <group col="4">
                                    <field name="no_of_subject"/>
                                    <field name="total_hours"/>
                                    <field name="total_credits"/>
                                    <field name="exec_hours" readonly="1"/>
                                </group>
                                <group>
                                    <field name="subject_ids" nolabel="1" widget="many2many_list"/>
                                </group>
                            </page>
                            <!--<page string="Professional Attitude">-->
                                <!--&lt;!&ndash;<group col="2">&ndash;&gt;-->
