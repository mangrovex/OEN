<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_theme_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.theme.view.form.inherit.base.setup</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='about']" position="replace">
               <div id='about'>
                            <h2>About Contigo</h2>
                            <div class="row mt16 o_settings_container">
                                <div class='col-12 col-lg-6 o_setting_box' id='appstore'>
                                    <div class="d-flex">
                                        <div class="o_setting_right_pane">
                                            <a class="d-block mx-auto" href="https://manexware.com" target="blank">
                                                <img alt="Manexware" class="d-block mx-auto img img-fluid" src="/backend_theme_v13/static/src/img/logo.png"/>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <widget name='res_config_edition'/>
                            </div>
                        </div>
            </xpath>
        </field>
    </record>
</odoo>

